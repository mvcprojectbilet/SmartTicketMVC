<body class=" login">
    <!-- BEGIN LOGO -->
    <div class="logo" style="margin-top:10px;">
        <a href="index.html">
            <img src="~/Content/assets/pages/img/logo-big.png" alt="" />
        </a>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <!-- BEGIN LOGIN FORM -->
            <form class="login-form" action="index.html" method="post">
                <h3 class="form-title font-green">Giriş</h3>
                <div class="alert alert-danger display-hide">
                    <button class="close" data-close="alert"></button>
                    <span> Kullanıcı adı ve şifre giriniz. </span>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Username, new { @class = "control-label visible-ie8 visible-ie9" })
                    <div class="input-icon">
                        <i class="fa fa-user"></i>
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control placeholder-no-fix,", @placeholder = "Kullanıcı Adı" })
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "control-label visible-ie8 visible-ie9" })
                    <div class="input-icon">
                        <i class="fa fa-lock"></i>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control placeholder-no-fix,", @placeholder = "Şifre" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-actions">
                    <button type="submit" class="btn green uppercase">Giriş</button>
                    <label class="rememberme check mt-checkbox mt-checkbox-outline">
                        <input type="checkbox" name="remember" value="1" />Beni Hatırla
                        <span></span>
                    </label>
                    <a href="javascript:;" id="forget-password" class="forget-password">@Html.ActionLink("Şifremi unuttum", "ForgetPassword")</a>
                </div>

                <div class="create-account">
                    <p>
                        @Html.ActionLink("Hesap Oluştur", "Register")
                    </p>
                </div>
            </form>
        }
        <!-- END LOGIN FORM -->

    </div>
       
