<body class="login" onload="disableSubmit()">
    <!-- BEGIN LOGO -->
    <div class="logo" style="margin-top:10px;">
        <a href="index.html">
            <img src="~/Content/assets/pages/img/logo-big.png" alt="" />
        </a>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content">
        @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <!-- BEGIN REGISTRATION FORM -->

            <h3 class="font-green">Kayıt Ol</h3>
            <p class="hint"> Kişisel bilgilerinizi giriniz :  </p>
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "control-label visible-ie8 visible-ie9" })

                @Html.TextBoxFor(m => m.Name, new { @class = "form-control placeholder-no-fix,", @placeholder = "Ad" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })

            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Surname, new { @class = "control-label visible-ie8 visible-ie9" })

                @Html.TextBoxFor(m => m.Surname, new { @class = "form-control placeholder-no-fix,", @placeholder = "Soyad" })
                @Html.ValidationMessageFor(m => m.Surname, "", new { @class = "text-danger" })

            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Gender, new { @class = "control-label visible-ie8 visible-ie9" })

                @Html.EnumDropDownListFor(m => m.Gender, new { @class = "form-control placeholder-no-fix,", @placeholder = "Cinsiyet" })
                @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger" })

            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Mail, new { @class = "control-label visible-ie8 visible-ie9" })

                @Html.TextBoxFor(m => m.Mail, new { @class = "form-control placeholder-no-fix,", @placeholder = "E-Posta" })
                @Html.ValidationMessageFor(m => m.Mail, "", new { @class = "text-danger" })

            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Phone, new { @class = "control-label visible-ie8 visible-ie9" })

                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control placeholder-no-fix,", @placeholder = "Telefon" })
                @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })

            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.BirthDay, new { @class = "control-label visible-ie8 visible-ie9" })

                @Html.EditorFor(m => m.BirthDay, new { htmlAttributes = new { @class = "form-control placeholder-no-fix", @placeholder = "Doğum Tarihi" } })
                @Html.ValidationMessageFor(m => m.BirthDay, "", new { @class = "text-danger" })

            </div>

            <p class="hint"> Hesap bilgilerinizi giriniz : </p>
            <div class="form-group">
                @Html.LabelFor(m => m.Username, new { @class = "control-label visible-ie8 visible-ie9" })

                @Html.TextBoxFor(m => m.Username, new { @class = "form-control placeholder-no-fix,", @placeholder = "Kullanıcı Adı" })
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })

            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "control-label visible-ie8 visible-ie9" })

                @Html.PasswordFor(m => m.Password, new { @class = "form-control placeholder-no-fix,", @placeholder = "Şifre" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label visible-ie8 visible-ie9" })

                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control placeholder-no-fix,", @placeholder = "Şifre Onaylama" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })

            </div>
            <div class="form-group margin-top-20 margin-bottom-20">
                <label class="mt-checkbox mt-checkbox-outline">

                    <a href="javascript:;">Kullanım şartları </a> &
                    <a href="javascript:;">Gizlilik Politikası </a>
                    <input type="checkbox" name="terms" id="terms" onchange="activateButton(this)"/> kabul ediyorum.
                    <span></span>
                </label>
                <div id="register_tnc_error"> </div>
            </div>
            <div class="form-actions">
                <button type="button" id="back-btn" class="btn green btn-outline">@Html.ActionLink("Geri", "Login")</button>
                <button type="submit" id="submit" name="submit"class="btn btn-success uppercase pull-right">Kayıt Ol</button>
            </div>
        }
            <!-- END REGISTRATION FORM -->
        </div>
        <div class="copyright"> 2019 © SmartTicket </div>
        <!--[if lt IE 9]>
        <script src="~/Content/assets/global/plugins/respond.min.js"></script>
        <script src="~/Content/assets/global/plugins/excanvas.min.js"></script>
        <script src="~/Content/assets/global/plugins/ie8.fix.min.js"></script>
        <![endif]-->
        <!-- BEGIN CORE PLUGINS -->
        <script src="~/Content/assets/global/plugins/jquery.min.js" type="text/javascript"></script>
        <script src="~/Content/assets/global/plugins/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
        <script src="~/Content/assets/global/plugins/js.cookie.min.js" type="text/javascript"></script>
        <script src="~/Content/assets/global/plugins/jquery-slimscroll/jquery.slimscroll.min.js" type="text/javascript"></script>
        <script src="~/Content/assets/global/plugins/jquery.blockui.min.js" type="text/javascript"></script>
        <script src="~/Content/assets/global/plugins/bootstrap-switch/js/bootstrap-switch.min.js" type="text/javascript"></script>
        <!-- END CORE PLUGINS -->
        <!-- BEGIN PAGE LEVEL PLUGINS -->
        <script src="~/Content/assets/global/plugins/jquery-validation/js/jquery.validate.min.js" type="text/javascript"></script>
        <script src="~/Content/assets/global/plugins/jquery-validation/js/additional-methods.min.js" type="text/javascript"></script>
        <script src="~/Content/assets/global/plugins/select2/js/select2.full.min.js" type="text/javascript"></script>
        <!-- END PAGE LEVEL PLUGINS -->
        <!-- BEGIN THEME GLOBAL SCRIPTS -->
        <script src="~/Content/assets/global/scripts/app.min.js" type="text/javascript"></script>
        <!-- END THEME GLOBAL SCRIPTS -->
        <!-- BEGIN PAGE LEVEL SCRIPTS -->
        <script src="~/Content/assets/pages/scripts/login.min.js" type="text/javascript"></script>
        <!-- END PAGE LEVEL SCRIPTS -->
        <!-- BEGIN THEME LAYOUT SCRIPTS -->
        <!-- END THEME LAYOUT SCRIPTS -->
        <script>
            function disableSubmit() {
                document.getElementById("submit").disabled = true;
            }

            function activateButton(element) {

                if (element.checked) {
                    document.getElementById("submit").disabled = false;
                }
                else {
                    document.getElementById("submit").disabled = true;
                }

            }
        </script>
    </body>

</html>